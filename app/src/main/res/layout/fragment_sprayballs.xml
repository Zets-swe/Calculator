<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="ru.zets_swe.calculator.fragments.FragmentSprayballs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="6dp">

        <Button
            android:id="@+id/btn_sprayballs1"
            style="@style/button_main"
            android:text="@string/text_btn_sprayballs1" />

        <LinearLayout
            android:id="@+id/L_sprayballs1"
            style="@style/notes_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/table_text_vertical"
                    android:text="@string/text_tv_sprayballs_the_depth_of_the_sphere_m" />

                <EditText
                    android:id="@+id/et_sprayballs_the_depth_of_the_sphere_m"
                    style="@style/editText_vertical"
                    android:inputType="number|numberDecimal"
                    android:hint="h" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/table_text_vertical"
                    android:text="@string/text_tv_sprayballs_the_diameter_of_the_tank_m" />

                <EditText
                    android:id="@+id/et_sprayballs_the_diameter_of_the_tank_m"
                    style="@style/editText_vertical"
                    android:inputType="number|numberDecimal"
                    android:hint="D" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/table_text_vertical"
                    android:text="@string/text_tv_sprayballs_the_angle_of_the_spray_deg" />

                <EditText
                    android:id="@+id/et_sprayballs_the_angle_of_the_spray_deg"
                    style="@style/editText_vertical"
                    android:inputType="number|numberDecimal"
                    android:hint="α" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/table_text_vertical"
                    android:text="@string/text_tv_sprayballs_rod_lenhgt_sprayball_m" />

                <EditText
                    android:id="@+id/et_sprayballs_rod_lenhgt_sprayball_m"
                    style="@style/editText_vertical_calculate"
                    android:hint="H" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/tank_sprayball" />

            <Button
                android:id="@+id/btn_sprayballs1_calculate"
                style="@style/button_calculate" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_sprayballs2"
            style="@style/button_main"
            android:text="Подбор головки" />

        <LinearLayout
            android:id="@+id/L_sprayballs2"
            style="@style/notes_view">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/table_text_vertical"
                    android:text="@string/text_tv_sprayballs_choose_the_type" />

                <Spinner
                    android:id="@+id/sp_sprayballs_choose_the_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/table_text_vertical"
                    android:text="@string/text_tv_sprayballs_specify_the_angle" />

                <Spinner
                    android:id="@+id/sp_sprayballs_specify_the_angle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/table_text_vertical"
                    android:layout_weight="2"
                    android:text="@string/text_tv_sprayballs_diameter_of_the_tank_m" />

                <EditText
                    android:id="@+id/et_sprayballs_diameter_of_the_tank_m"
                    style="@style/editText_vertical"
                    android:inputType="number|numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/table_text_vertical"
                    android:layout_weight="2"
                    android:text="@string/text_tv_sprayballs_work_flow_m3_h" />

                <EditText
                    android:id="@+id/et_sprayballs_work_flow_m3_h"
                    style="@style/editText_vertical"
                    android:inputType="number|numberDecimal" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/L_sprayballs2_list"
                style="@style/notes_view">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_tv_bottle_washer2_manufacture"
                            android:id="@+id/tv_factory"
                            android:layout_gravity="center"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="wrap_content"
                            android:background="@drawable/separator"
                            android:layout_height="1dp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_tv_sprayballs_series"
                                android:id="@+id/tv_series"
                                android:layout_gravity="center" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text_tv_sprayballs_mark"
                                android:id="@+id/tv_mark"
                                android:textAlignment="viewEnd" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dmin"
                            android:id="@+id/tv_diameter_min"
                            android:layout_gravity="center" />
                        <View
                            android:layout_width="wrap_content"
                            android:background="@drawable/separator"
                            android:layout_height="1dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dmax"
                            android:id="@+id/tv_diameter_max"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fmin"
                            android:id="@+id/tv_flow_min"
                            android:layout_gravity="center" />
                        <View
                            android:layout_width="wrap_content"
                            android:background="@drawable/separator"
                            android:layout_height="1dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fmax"
                            android:id="@+id/tv_flow_max"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pmin"
                            android:id="@+id/tv_pressure_min"
                            android:layout_gravity="center" />
                        <View
                            android:layout_width="wrap_content"
                            android:background="@drawable/separator"
                            android:layout_height="1dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pmax"
                            android:id="@+id/tv_pressure_max"
                            android:layout_gravity="center" />
                    </LinearLayout>
                </LinearLayout>

                <ListView
                    android:id="@+id/lv_sprayballs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_sprayballs2_calculate"
                style="@style/button_calculate" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="ru.zets_swe.calculator.fragments.FragmentTanks">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="6dp">


        <Button
            android:id="@+id/btn_tanks_flow_wash"
            style="@style/button_main"
            android:text="@string/tv_tanks_the_flow_to_the_sink_tanks" />

        <LinearLayout
            android:id="@+id/L_tanks_flow_wash"
            style="@style/notes_view">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="@string/tv_tanks_diameter"
                    style="@style/table_text_vertical" />

                <EditText
                    android:id="@+id/et_tanksF_diameter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="1"
                    android:hint="D"
                    android:inputType="number|numberDecimal"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="@string/tv_tanks_angle_spray"
                    style="@style/table_text_vertical"/>

                <EditText
                    android:id="@+id/et_tanks_angle_spray"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="1"
                    android:hint="a"
                    android:inputType="number|numberDecimal"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="@string/tv_tanks_pollution_level"
                    style="@style/table_text_vertical"/>

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_tanks_pollution_level"
                    android:layout_gravity="center_vertical"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="@string/tv_tanks_estimated_flow"
                    style="@style/table_text_vertical"/>

                <EditText
                    android:id="@+id/et_tanks_estimated_flow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:editable="true"
                    android:ems="1"
                    android:enabled="false"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="center"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:layout_gravity="center"
                android:src="@drawable/tank_flow_wash" />

            <Button
                android:id="@+id/btn_tanks_flow_wash_calculate"
                style="@style/button_calculate"/>

        </LinearLayout>


        <Button
            android:id="@+id/btn_tanksF_volume_solution"
            style="@style/button_main"
            android:text="@string/tv_tanks_volume_of_the_solution_in_the_tank" />

        <LinearLayout
            android:id="@+id/L_tanks_volume_solution"
            style="@style/notes_view">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:shrinkColumns="0"
                android:stretchColumns="*"
                android:textAlignment="center">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center">

                    <TextView
                        style="@style/table_text"
                        android:text="@string/tv_tanks_diameter" />

                    <TextView
                        style="@style/table_text"
                        android:text="@string/tv_tanks_cone_height" />

                    <TextView
                        style="@style/table_text"
                        android:text="@string/tv_tanks_cylinder_height" />

                    <TextView
                        style="@style/table_text"
                        android:text="@string/tv_tanks_volume_solution" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_tanksV_diameter"
                        style="@style/editText"
                        android:hint="D"
                        android:inputType="number|numberDecimal" />

                    <EditText
                        android:id="@+id/et_tanks_cone_height"
                        style="@style/editText"
                        android:hint="h1"
                        android:inputType="number|numberDecimal" />

                    <EditText
                        android:id="@+id/et_tanks_cylinder_height"
                        style="@style/editText"
                        android:hint="h2"
                        android:inputType="number|numberDecimal" />

                    <EditText
                        android:id="@+id/et_tanks_volume_solution"
                        style="@style/editText"
                        android:editable="true"
                        android:enabled="false"
                        android:inputType="number" />

                </TableRow>
            </TableLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_gravity="center"
                android:src="@drawable/tank_volume" />

            <Button
                android:id="@+id/btn_tanksF_volume_solution_calculate"
                style="@style/button_calculate"/>


        </LinearLayout>


    </LinearLayout>
</ScrollView>

